                                    <div class="page-body">
                                        <div class="row simple-cards users-card">
                                            <% if(userInfo && userInfo.userDetails && userInfo.userDetails.length > 0) {
                                                userInfo.userDetails.forEach(function(user) { %>
                                            <div class="col-md-12 col-xl-4">
