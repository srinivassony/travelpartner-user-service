    var maxLength = 25;
  
    // Check if the description exceeds the maximum length
    if (description.textContent.length > maxLength) {
      // Truncate the description and add three dots
      var truncatedText = description.textContent.substring(0, maxLength) + '...';
      // Update the description content
      description.textContent = truncatedText;
    }
</script>

<script>
    document.querySelectorAll('.post-card').forEach(card =>
    {
        const slider = card.querySelector('.post-image-slider');
        const images = card.querySelectorAll('.post-image');
        const leftArrow = card.querySelector('.left-arrow');
        const rightArrow = card.querySelector('.right-arrow');

        if (images.length > 1)
        {
            leftArrow.classList.remove('hidden');
            rightArrow.classList.remove('hidden');
        }

        let currentSlide = 0;

        leftArrow.addEventListener('click', () =>
        {
            if (currentSlide === 0)
            {
                currentSlide = images.length - 1;
            } else
            {
                currentSlide--;
            }
            updateSlider();
        });

        rightArrow.addEventListener('click', () =>
        {
            if (currentSlide === images.length - 1)
            {
                currentSlide = 0;
            } else
            {
                currentSlide++;
            }
            updateSlider();
        });

        function updateSlider()
        {
            slider.style.transform = `translateX(-${currentSlide * 100}%)`;
        }
    });
</script>

