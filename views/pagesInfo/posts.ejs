      .post-image-container {
        position: relative;
        overflow: hidden;
      }

      .post-image-container img {
        max-width: 100%;
        max-height: 100%;
    }
  
      .post-image-slider {
        display: flex;
        transition: transform 0.5s ease;
      }
  
      .post-image {
        width: 100%;
        height: 100%;
        object-fit: contain; /* Adjust the object-fit property */
        object-position: center; /* Center the image within the container */
      }
  
      .post-footer {
        padding: 10px;
        border-top: 1px solid #dbdbdb;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
  
      .like-btn,
      .comment-btn {
        background: none;
        border: none;
        cursor: pointer;
        color: #262626;
      }
  
      .heart-icon,
      .comment-icon {
        margin-right: 5px;
      }
  
      .description {
        padding: 10px;
      }
  
      .arrow-icon {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        font-size: 24px;
        cursor: pointer;
        color: #262626;
        padding: 5px;
        border-radius: 50%;
